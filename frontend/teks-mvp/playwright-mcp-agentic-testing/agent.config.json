{
  "mcp": {
    "mode": "stdio",
    "command": "node",
    "args": [
      "./node_modules/@playwright/mcp/cli.js",
      "--headless",
      "--no-sandbox"
    ],
    "cwd": ".",
    "env": {
      "PWDEBUG": "0"
    }
  },
  "defaultEnv": "dev",
  "artifactsDir": "reports",
  "environments": {
    "dev": {
      "baseUrl": "http://localhost:4200",
      "headless": true,
      "timeoutMs": 45000
    }
  }
}
